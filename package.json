{
	"name": "@jitsi/cf-ts-bundler-worker",
	"version": "1.0.0",
	"description": "A fast, lightweight Cloudflare Worker that runs esbuild on the edge to compile TypeScript to JavaScript with CDN imports support",
	"keywords": [
		"cloudflare",
		"worker",
		"typescript",
		"esbuild",
		"bundler",
		"compilation",
		"edge",
		"wasm"
	],
	"author": "cosmintimis",
	"license": "Apache-2.0",
	"repository": {
		"type": "git",
		"url": "https://github.com/jitsi/cloudflare-ts-bundler-worker"
	},
	"main": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"default": "./dist/index.js"
		}
	},
	"files": [
		"dist"
	],
	"engines": {
		"node": ">=18.0.0"
	},
	"scripts": {
		"build": "tsc --project tsconfig.build.json",
		"clean": "rm -rf dist",
		"prepack": "npm run clean && npm run build",
		"deploy": "wrangler deploy",
		"dev": "wrangler dev",
		"start": "wrangler dev",
		"test": "vitest",
		"cf-typegen": "wrangler types",
		"check": "biome check .",
		"check:write": "biome check --write ."
	},
	"devDependencies": {
		"@biomejs/biome": "^2.3.2",
		"@cloudflare/vitest-pool-workers": "^0.8.19",
		"@types/node": "^24.5.2",
		"typescript": "^5.5.2",
		"vitest": "~4.0.7",
		"wrangler": "^4.45.2"
	},
	"dependencies": {
		"chanfana": "^2.8.2",
		"esbuild-plugin-cdn-imports": "^2.0.0",
		"esbuild-wasm": "^0.25.9",
		"itty-router": "^5.0.22",
		"jose": "^6.1.0",
		"nanoid": "^5.1.5",
		"zod": "^3.25.76"
	}
}
