{
	"name": "@jitsi/cf-ts-bundler-worker",
	"version": "1.0.1",
	"description": "A fast, lightweight Cloudflare Worker that runs esbuild on the edge to compile TypeScript to JavaScript with CDN imports support",
	"keywords": [
		"cloudflare",
		"worker",
		"typescript",
		"esbuild",
		"bundler",
		"compilation",
		"edge",
		"wasm"
	],
	"author": "cosmintimis",
	"license": "Apache-2.0",
	"repository": {
		"type": "git",
		"url": "https://github.com/jitsi/cloudflare-ts-bundler-worker"
	},
	"main": "./worker-dist/index.js",
	"exports": {
		".": {
			"default": "./worker-dist/index.js"
		}
	},
	"files": [
		"worker-dist"
	],
	"engines": {
		"node": ">=18.0.0"
	},
	"scripts": {
		"build": "wrangler deploy --dry-run --outdir=worker-dist --minify",
		"clean": "rm -rf worker-dist",
		"prepack": "npm run clean && npm run build",
		"deploy": "wrangler deploy",
		"dev": "wrangler dev",
		"start": "wrangler dev",
		"test": "vitest",
		"cf-typegen": "wrangler types",
		"check": "biome check .",
		"check:write": "biome check --write ."
	},
	"devDependencies": {
		"@biomejs/biome": "^2.3.2",
		"@cloudflare/vitest-pool-workers": "^0.8.19",
		"@types/node": "^24.5.2",
		"typescript": "^5.5.2",
		"vitest": "~3.2.0",
		"wrangler": "^4.45.2"
	},
	"dependencies": {
		"chanfana": "^2.8.2",
		"esbuild-plugin-cdn-imports": "^2.0.0",
		"esbuild-wasm": "^0.25.9",
		"itty-router": "^5.0.22",
		"jose": "^6.1.0",
		"nanoid": "^5.1.5",
		"zod": "^3.25.76"
	}
}
